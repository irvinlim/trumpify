{
  "manifest_version": 2,

  "name": "Trumpify",
  "description": "This extension replaces pictures and names to the 45th president of the USA.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "title label"
  },
  
  "permissions": [
    "activeTab"
  ],
  
  "content_scripts": [
    {
      "matches": ["http://*/* "],
      "css": ["css/styles.css"],
      "js": ["lib/jquery-3.1.1.js", "js/trumpify.js"],
      "run_at": "document_start"
    }
  ],
  
  "permissions": [
    "https://www.facebook.com/*",
    "http://www.facebook.com/*"
  ],

  "web_accessible_resources": ["img/**/*"]
}